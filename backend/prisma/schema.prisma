generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  /// Уникальный ID записи (автоинкрементное целое число)
  id Int @id @default(autoincrement())

  /// Уникальный строковый идентификатор
  uid String @unique @default(cuid())

  /// Название товара
  name String

  /// Описание товара
  description String?

  /// Основная цена
  price Float

  /// Цена со скидкой
  discountPrice Float?

  /// Артикул товара (уникальный)
  sku String @unique

  /// Путь к изображению
  imageUrl String?

  /// Дата создания
  createdAt DateTime @default(now())

  /// Дата обновления
  updatedAt DateTime @updatedAt

}
